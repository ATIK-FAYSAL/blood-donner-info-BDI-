<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include
        android:id="@+id/toolbar"
        layout="@layout/tool_bar"/>

    <EditText
        android:id="@+id/old_pass"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:background="@drawable/round"
        android:drawableLeft="@drawable/lock_icon"
        android:textColor="#000"
        android:textSize="20dp"
        android:hint=" Old Password"
        android:textStyle="bold"
        android:layout_marginTop="68dp"
        android:ems="10"
        android:inputType="textPassword"
        android:layout_below="@+id/toolbar"
        android:layout_centerHorizontal="true" />

    <EditText
        android:id="@+id/new_pass"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:textSize="20dp"
        android:textStyle="bold"
        android:drawableLeft="@drawable/lock_icon"
        android:textColor="#000"
        android:background="@drawable/round"
        android:layout_marginTop="16dp"
        android:hint=" New Password"
        android:ems="10"
        android:inputType="textPassword"
        android:layout_below="@+id/old_pass"
        android:layout_alignLeft="@+id/old_pass"
        android:layout_alignStart="@+id/old_pass" />

    <EditText
        android:id="@+id/con_pass"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="#000"
        android:background="@drawable/round"
        android:hint=" Confirm Password"
        android:drawableLeft="@drawable/lock_icon"
        android:ems="10"
        android:inputType="textPassword"
        android:layout_marginTop="17dp"
        android:layout_below="@+id/new_pass"
        android:layout_alignLeft="@+id/new_pass"
        android:layout_alignStart="@+id/new_pass" />

    <Button
        android:id="@+id/save"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:textColor="#000"
        android:textSize="20dp"
        android:textStyle="bold"
        android:background="@drawable/round_button"
        android:text="SAVE"
        android:onClick="change_pass"
        android:layout_marginTop="88dp"
        android:layout_below="@+id/con_pass"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
